{
  "builds": [{ "src": "*.html", "use": "@vercel/static" }],
  "rewrites": [
    { "source": "/legal/privacy", "destination": "/legal/privacy.html" },
    { "source": "/legal/terms", "destination": "/legal/terms.html" },
    { "source": "/((?!legal).*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ]
}
